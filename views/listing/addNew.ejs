<% layout('/layouts/boilerplate') -%>

    <body>
        <h3 class="mt-4 text-center" >ADD NEW LISTING</h3>
        <div class="col-8 offset-2">
            <form method="post" action="/listing"  class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title </label>
                    <input id="title" class="form-control"  type="text" name="listing[title]" placeholder="Enter title" required>
                </div>
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label>
                <input type="password"  id="exampleInputPassword1" placeholder="Password"> -->

