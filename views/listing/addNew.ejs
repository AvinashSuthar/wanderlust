                    <input id="description"  type="text" class="form-control" name="listing[description]"
                        placeholder="Enter description" required>
                    <!-- <input id="title" class="form-control" type="text" name="listing[title]" placeholder="Enter title"> -->
                </div>
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label>
                <input type="password"  id="exampleInputPassword1" placeholder="Password"> -->

                    <label for="price">Price </label>
                    <input id="price"  type="text" class="form-control" name="listing[price]"
                        placeholder="Enter price" required>

                    <!-- <input id="title" class="form-control" type="text" name="listing[title]" placeholder="Enter title"> -->
                </div>
                
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label>
                <input type="password"  id="exampleInputPassword1" placeholder="Password"> -->

                    <label for="image">Upload Image</label>
                    <input id="image" type="file" class="form-control" name="listing[image]"
                        >

                    <!-- <input id="title" class="form-control" type="text" name="listing[title]" placeholder="Enter title"> -->
                </div>
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label>
                <input type="password"  id="exampleInputPassword1" placeholder="Password"> -->

                    <label for="country">Country</label>
                    <input id="country"  type="text" class="form-control" name="listing[country]"
                        placeholder="Enter country" required> 

                    <!-- <input id="title" class="form-control" type="text" name="listing[title]" placeholder="Enter title"> -->
                </div>
                <div class="form-group">
                    <!-- <label for="exampleInputPassword1">Password</label>
                <input type="password"  id="exampleInputPassword1" placeholder="Password"> -->

                    <label for="location">Location</label>
                    <input id="location"  type="text" class="form-control" name="listing[location]"
                        placeholder="Enter location" required>


                    <!-- <input id="title" class="form-control" type="text" name="listing[title]" placeholder="Enter title"> -->
                </div>




