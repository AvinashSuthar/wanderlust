<% layout('/layouts/boilerplate') -%>

    <body>
        <h3 class="mt-4 text-center">Edit Your Post</h3>

        <div class="col-8 offset-2">
            <form method="post" action="/listing/<%= curListing._id  %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title"></label>
                    <input type="text" class="form-control" required  id="title" name="listing[title]" value="<%= curListing.title  %>">
                </div>
                <div class="form-group">
                    <label for="description"></label>
                    <input type="text" class="form-control"  required id="description" name="listing[description]" value="<%= curListing.description  %>">
                </div>
                <div class="form-group">
                    <label for="price"></label>
                    <input type="text" class="form-control" required  id="price" name="listing[price]" value="<%= curListing.price  %>">
                </div>
                <div>
                    Previous Image :  <br>
                    <img width="100px" style="border-radius: 10px ;" src="<%= curListing.image.url  %>" alt="">
                </div>
                <div class="form-group">
                    <label for="image"></label>
                    <input type="file" class="form-control"   id="image" name="listing[image]" >
                </div>
                <div class="form-group">
                    <label for="country"></label>
                    <input type="text" class="form-control" required  id="country" name="listing[country]" value="<%= curListing.country  %>">
                </div>
                <div class="form-group">
                    <label for="location"></label>
                    <input type="text" class="form-control" required  id="location" name="listing[location]" value="<%= curListing.location  %>">
                </div>
                
                <div class="d-grid gap-4 col-6 mx-auto text-center mb-4">

                    <button type="submit" class=" btn btn-primary">Edit</button>
                </div>
            </form>
        </div>


        <!-- <script src="/p"></script> -->


    </body>